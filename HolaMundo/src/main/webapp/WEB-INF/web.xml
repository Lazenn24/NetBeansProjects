<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HolaMundoXML</servlet-name>
        <servlet-class>com.mycompany.holamundo.HolaMundoXML</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdivinaColor</servlet-name>
        <servlet-class>com.mycompany.holamundo.AdivinaColor</servlet-class>
        <init-param>
            <param-name>Green</param-name>
            <param-value>Finish</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AdivinaColor1</servlet-name>
        <servlet-class>com.mycompany.holamundo.AdivinaColor1</servlet-class>
        <init-param>
            <param-name>color</param-name>
            <param-value>green</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>PrimeraVez</servlet-name>
        <servlet-class>com.mycompany.holamundo.PrimeraVez</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletSessionBean1</servlet-name>
        <servlet-class>com.mycompany.holamundo.ServletSessionBean1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletStateful</servlet-name>
        <servlet-class>com.mycompany.holamundo.ServletStateful</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HolaMundoXML</servlet-name>
        <url-pattern>/HolaMundoXML</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdivinaColor</servlet-name>
        <url-pattern>/AdivinaColor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdivinaColor1</servlet-name>
        <url-pattern>/AdivinaColor1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrimeraVez</servlet-name>
        <url-pattern>/PrimeraVez</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletSessionBean1</servlet-name>
        <url-pattern>/ServletSessionBean1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletStateful</servlet-name>
        <url-pattern>/Stateful</url-pattern>
        <url-pattern>/ServletStateful</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
